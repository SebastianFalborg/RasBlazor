@inherits LayoutComponentBase

<BlazoredModal />

<div class="main">
	<div class="content px-4">
		@Body
	</div>
	<nav class="navbar fixed-bottom navbar-expand-sm navbar-dark bg-dark">
		<a class="navbar-brand" href="#">Soap's Home</a>
		<button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="@NavMenuCssClass navbar-collapse">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item px-3">
					<NavLink class="nav-link" href="todo">
						<span class="oi oi-list-rich" aria-hidden="true"></span> Todo
					</NavLink>
				</li>
				<li class="nav-item px-3">
					<NavLink class="nav-link" href="localstorage">
						<span class="oi oi-folder" aria-hidden="true"></span> Local Storage
					</NavLink>
				</li>
				<li class="nav-item px-3">
					<NavLink class="nav-link" href="opstilling">
						<span class="oi oi-grid-four-up" aria-hidden="true"></span> Opstilling
					</NavLink>
				</li>
			</ul>
		</div>
	</nav>
</div>

@code {
	private bool collapseNavMenu = true;

	private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}